<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.finder.gettingstarted.gettingstarted.Services.MainServiceActivity">

    <Button
        android:text="Start Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:id="@+id/button_start_service"
        android:textSize="14sp"
        android:onClick="startService" />

    <Button
        android:text="Stop Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_stop_service"
        android:onClick="stopService"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_start_service"
        android:layout_alignLeft="@+id/button_start_service"
        android:layout_alignStart="@+id/button_start_service" />

    <Button
        android:text="stop intent service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/button_start_intent_service"
        android:layout_alignLeft="@+id/button_start_intent_service"
        android:layout_alignStart="@+id/button_start_intent_service"
        android:layout_marginTop="16dp"
        android:onClick="stopIntentService" />

    <Button
        android:text="start intent service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_intent_service"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/button_stop_service"
        android:layout_alignLeft="@+id/button_stop_service"
        android:layout_alignStart="@+id/button_stop_service"
        android:onClick="startIntentService" />
</RelativeLayout>
